{
  "name": "panaderia",
  "version": "1.0.0",
  "description": "Proyecto Panader√≠a",
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "lint:backend": "npm run -w backend lint",
    "lint:frontend": "npm run -w frontend lint",
    "format:backend": "npm run -w backend format",
    "format:frontend": "npm run -w frontend format",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^16.1.4"
  },
  "lint-staged": {
    "backend/**/*.{js,cjs,mjs}": [
      "eslint --cache --config ./backend/eslint.config.js --fix"
    ],
    "frontend/**/*.{js,jsx,cjs,mjs}": [
      "eslint --cache --config ./frontend/eslint.config.js --fix"
    ]
  },
  "author": "Omar Moroso",
  "license": "MIT"
}
